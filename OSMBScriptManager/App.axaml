<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OSMBScriptManager.App"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <!-- Font family resources removed from static XAML to avoid early glyph loading errors.
         Fonts are registered at runtime in App.axaml.cs if embedded OTFs are present and valid. -->

    <Application.Styles>
        <FluentTheme />

        <!-- Simple app-wide styles to improve visual consistency (avoid hard-coded colors so theme can apply) -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style Selector="Button">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Application.Styles>
</Application>